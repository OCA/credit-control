<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_partner_form_overdue_warn" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <div role="alert" position="after">
                <div
                    class="alert alert-warning"
                    groups="account.group_account_invoice,account.group_account_readonly"
                    role="alert"
                    attrs="{'invisible': [('overdue_invoice_count', '=', 0)]}"
                >
                  This customer has <field name="overdue_invoice_count" /><button
                        string="overdue invoice(s)"
                        type="object"
                        name="jump_to_overdue_invoices"
                        class="oe_link"
                    />for a total residual of <field name="overdue_invoice_amount" />
                </div>
                <field name="credit_note" invisible="1"/>
                <div
                    class="alert alert-warning"
                    groups="account.group_account_invoice,account.group_account_readonly"
                    role="alert"
                    attrs="{'invisible': ['|',('credit_note_count', '=', 0), ('credit_note', '!=', True)]}"
                >
                This customer has <field name="credit_note_count" /><button
                    string="Credit Note"
                    type="object"
                    name="jump_to_credit_note"
                    class="oe_link"
                />for a total residual of <field name="credit_note_amount" />
                </div>
            </div>
        </field>
    </record>

</odoo>
