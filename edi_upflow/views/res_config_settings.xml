<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit edi upflow</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='send_invoices_followups']" position="before">
                <div class="col-12 col-lg-6 o_setting_box" id="upflow_settings">
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Upflow backend</span>
                        <div class="text-muted">
                            Upflow backend (on the current company)
                        </div>
                        <div class="text-muted">
                            <field name="upflow_backend_id" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
