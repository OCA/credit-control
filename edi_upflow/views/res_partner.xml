<odoo>

    <record model="ir.ui.view" id="view_partner_form">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    type="object"
                    class="oe_stat_button"
                    icon="fa-retweet"
                    attrs="{'invisible': ['|', ('parent_id', '!=', False), ('exchange_record_count', '=', 0)]}"
                    name="action_view_edi_records"
                >
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_value">
                            <field name="exchange_record_count" />
                        </span>
                        <span class="o_stat_text">EDI</span>
                    </div>
                </button>
            </div>
            <field name="upflow_uuid" position="after">
                <field name="upflow_edi_backend_id" groups="base.group_no_one" />
            </field>
        </field>
    </record>
</odoo>
