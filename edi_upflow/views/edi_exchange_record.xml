<odoo>
    <!--
        # TODO: considering to move that in edi_oca:
        # https://github.com/OCA/edi/issues/782 -->
    <record id="edi_exchange_record_view_form" model="ir.ui.view">
        <field name="model">edi.exchange.record</field>
        <field name="inherit_id" ref="edi_oca.edi_exchange_record_view_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page
                    name="dependent_exchanges"
                    string="Dependent exchanges"
                    attrs="{'invisible': [('dependent_exchange_ids', '=', False)]}"
                >
                    <field name="dependent_exchange_ids" nolabel="1" colspan="4">
                        <tree>
                            <field name="type_id" />
                            <field name="exchanged_on" />
                            <field name="edi_exchange_state" />
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

</odoo>
