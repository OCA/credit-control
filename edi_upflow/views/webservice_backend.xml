<odoo>

    <record model="ir.ui.view" id="webservice_backend_form_view">
        <field name="name">webservice.backend.form (in webservice)</field>
        <field name="model">webservice.backend</field>
        <field name="inherit_id" ref="webservice.webservice_backend_form_view" />
        <field name="arch" type="xml">
            <field name="api_key_header" position="after">
                <field
                    name="upflow_api_key"
                    attrs="{
                        'invisible': [('auth_type', '!=', 'upflow')],
                        'required': [('auth_type', '=', 'upflow')],
                    }"
                />
                <field
                    name="upflow_api_secret"
                    attrs="{
                        'invisible': [('auth_type', '!=', 'upflow')],
                        'required': [('auth_type', '=', 'upflow')],
                    }"
                    password="True"
                />
            </field>
        </field>
    </record>
</odoo>
