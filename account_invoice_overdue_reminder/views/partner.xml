<odoo>


<record id="view_partner_property_form" model="ir.ui.view">
    <field name="name">overdue.reminder.res.partner.form</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="account.view_partner_property_form"/>
    <field name="arch" type="xml">
        <group name="accounting_entries" position="after">
            <group name="overdue_reminder" string="Overdue Reminder" attrs="{'invisible': [('customer', '!=', True)]}">
                <field name="no_overdue_reminder"/>
            </group>
        </group>
    </field>
</record>

<act_window
    id="action_overdue_reminder_action"
    name="Overdue Reminder Actions"
    context="{'search_default_commercial_partner_id': [active_id]}"
    res_model="overdue.reminder.action"
    src_model="res.partner"/>


</odoo>
